@model FCLoanCalculator.Models.Loan



<div class="container">
    <h1 class="mb-2 text-success">Loan Calculator</h1>
    <div class="row">
        <div class="col">
            <form asp-controller="Home" asp-action="App" method="post">
                <div class="form-row">
                    <div class="form-group col-12 mb-2">
                        <label asp-for="Amount"><h5 class="text-success">Loan amount:</h5></label>
                        <input type="number" class="form-control" id="lAmount" min="1000" step="500" value=@Model.Amount asp-for="Amount" />
                    </div>
                    <div class="form-group col-12 mb-2">
                        <label asp-for="Term"><h5 class="text-success">Months to pay:</h5></label>
                        <input type="number" class="form-control" id="lTerm" min="1" value=@Model.Term asp-for="Term" />
                    </div>
                    <div class="from-group col-12 mb-2">
                        <label asp-for="Rate"><h5 class="text-success">Interest Rate:</h5></label>
                        <input type="number" class="form-control" id="lRate" min="1" step=".5" value=@Model.Rate asp-for="Rate" />
                    </div>
                </div>
                <button type="submit" class="btn btn-dark mt-2">Calculate</button>
            </form>
        </div>
        <div class="col">
            <div id="paymentTitle">
                <p>Yout monthly payments</p>
            </div>
            <p id="payment">
                @Model.Payment.ToString("C")
            </p>
            <div class="row">
                <div class="col-6">
                    <label class="text.left">Total principal</label>
                </div>
                <div class="col-6" id="totalPrincipal">
                    @Model.Amount.ToString("C")
                </div>
                <div class="col-6">
                    <label class="text.left">Total interest</label>
                </div>
                <div class="col-6" id="totalInterest">
                    @Model.TotalInterst.ToString("C")
                </div>
                <div class="col-6">
                    <label class="text.left">Total cost</label>
                </div>
                <div class="col-6" id="totalCost">
                    @Model.TotalCost.ToString("C")
                </div>
            </div>

            @if(Model.Payments.Count > 0)
            {
                <div class="row">
                    <div class="col">
                        <table id="scheduleTable" class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Month</th>
                                    <th>Payment</th>
                                    <th>Principal</th>
                                    <th>Interest</th>
                                    <th>Total interest</th>
                                    <th>Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model.Payments)
                                {
                                    <tr>
                                        <td>@item.Month</td>
                                        <td>@item.Payment</td>
                                        <td>@item.MonthlyPrincipal</td>
                                        <td>@item.MonthlyInterest</td>
                                        <td>@item.TotalInterest</td>
                                        <td>@item.Balance</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
